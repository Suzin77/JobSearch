{% extends 'base.html.twig' %}
{% block body %}

    <p>to jest search</p>
    {% if my_form is defined %}
    <div>
        {{ form_start(my_form) }}
        {{ form_widget(my_form) }}
        {{ form_end(my_form) }}
        {% if data is defined %}
            <p>wpisales\: {{data.city}}</p>
            <p>Znaleziono {{data.dbData_count}} ofert</p>
            <table id="offers" class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>City</th>
                        <th>Company Name</th>
                        <th>Job Title</th>
                        <th>Skills</th>
                    </tr>        
                </thead>
                <tbody>
                {% for key, job in data.dbData %}
                    <tr>
                        <td>{{job.city}}</td>
                        <td>{{job.companyname}}</td>
                        <td>{{job.title}}</td>
                        <td>{{job.skills}}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}    
    </div>
    {% endif %}
{% endblock %}